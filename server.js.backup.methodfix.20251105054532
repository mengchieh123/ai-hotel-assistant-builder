// å°å…¥å¢å¼·ç‰ˆ AI æœå‹™
console.log('ğŸš€ è¼‰å…¥å¢å¼·ç‰ˆ AI æœå‹™...');
const enhancedAI = require('./services/enhanced-ai-service');
console.log('âœ… å¢å¼·ç‰ˆ AI æœå‹™è¼‰å…¥æˆåŠŸ');

const app = express();
