// å¥åº·æª¢æŸ¥ç«¯é»
app.get('/health', (req, res) => {
    res.json({
        status: 'æœå‹™é‹è¡Œä¸­',
        version: '5.0.0-ENHANCED',
        timestamp: new Date().toISOString(),
        features: [
            'å¤šå±¤æ¬¡æ„åœ–è­˜åˆ¥',
            'ç‰¹æ®Šéœ€æ±‚è™•ç†', 
            'åœ˜é«”è¨‚æˆ¿æ”¯æ´',
            'é•·æœŸä½å®¿æ–¹æ¡ˆ',
            'å¯µç‰©æ”¿ç­–',
