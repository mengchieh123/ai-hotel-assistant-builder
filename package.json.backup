{
  "name": "ai-hotel-assistant-builder",
  "version": "2.0.0",
  "description": "AI Hotel Assistant with Speckit Auto-Development",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "speckit:generate": "node speckit/cli.js generate",
    "speckit:validate": "node speckit/cli.js validate",
    "speckit:deploy": "node speckit/cli.js deploy",
    "speckit:sync": "node speckit/cli.js sync",
    "speckit:watch": "node speckit/cli.js watch",
    "railway:test": "npm run speckit:validate && (timeout 10s npm start & sleep 5 && npm run test:health)",
    "railway:deploy": "npm run speckit:generate && railway deploy",
    "test": "npm run speckit:validate && npm run test:health",
    "test:full": "npm run speckit:validate && npm run speckit:generate && npm run test:health",
    "setup": "npm install && npm run speckit:validate",
    "health:check": "curl -s http://localhost:3000/health || echo \"服务器未运行\"",
    "logs": "railway logs",
    "status": "railway status",
    "dev:watch": "nodemon --watch server.js --watch speckit/ --watch specs/ --ext js,yaml,json server.js"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}